---
import "../styles/global.css";

type Props = { title: string; description: string; path: string };
const { title, description, path } = Astro.props;
---

<div class="card">
  <h2>
    <a href={path}>{title}</a>
  </h2>
  <p>{description}</p>
  <div class="iframe-container">
    <iframe src={path} title={title}></iframe>
  </div>
</div>

<style>
  .card {
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    padding: 1.5rem;
    background: var(--background-container);
    box-shadow: 0 2px 4px var(--border);
  }

  .card h2 {
    margin-top: 0;
    margin-bottom: 0.5rem;
  }

  .card a {
    text-decoration: none;
    color: var(--foreground);
    border-bottom: 2px solid var(--border);
    transition: border-color 0.3s ease-in-out;

    &:hover,
    &:focus-visible {
      border-color: color-mix(in srgb, var(--foreground) 60%, transparent);
    }
  }

  .card p {
    margin-top: 0;
    margin-bottom: 1rem;
    color: var(--foreground);
  }

  .iframe-container {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    overflow: hidden;
    border: 1px solid var(--border);
    border-radius: 0.5rem;
  }

  iframe {
    position: absolute;
    width: 100%;
    height: 100%;
    border: none;
  }
</style>
